<div class="page-header">
    <h1>  All of the Statuses</h1>
</div>
<div class="options">
  <%=	 link_to "Post a New Status", new_status_path, class:"btn btn-success btn-large" %>
</div>
<% @statuses.each do |status| %>
  <div class="status">
    <strong><%= status.user.full_name  %></strong>
    <p> <%=	 status.content %> </p>
    <div class="meta">
      <%=	 link_to time_ago_in_words(status.created_at) + " ago", status %>
      <span class="admin">
        | <%=	 link_to "Edit", edit_status_path(status), class:"btn btn-info btn-mini" %> |
        <%=	 link_to "Delete", status, method: :delete, data: {confirm: "Are you sure you want to delete this status?"}, class:"btn btn-danger btn-mini" %>
      </span>
    </div>
  </div>
<% end %>
